<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sub1_Intermediate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buttonColor</item>
        <item name="colorPrimaryVariant">#200F29</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/buttonColor</item>
        <item name="colorSecondaryVariant">@color/buttonColor</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@color/baseColor</item>
    </style>

    <style name="Theme.Sub1_Intermediate.2" >
        <item name="colorPrimaryVariant">@color/baseColor</item>
    </style>

    <style name="Theme.Sub1_Intermediate.3" >
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowExitTransition">@android:transition/slide_bottom</item>
    </style>

    <style name="Theme.Sub1_Intermediate.4" >
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>


</resources>