<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ukdw.sub1_intermediate">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sub1_Intermediate">
        <activity
            android:name=".detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".newStory.NewStoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Sub1_Intermediate.4" />
        <activity
            android:name=".homeStory.HomeStoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Sub1_Intermediate.3" />
        <activity
            android:name=".main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Sub1_Intermediate.2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register.RegisterActivity"
            android:theme="@style/Theme.Sub1_Intermediate.2" />
        <activity
            android:name=".login.LoginActivity"
            android:theme="@style/Theme.Sub1_Intermediate.2" />
        <activity android:name=".camera.CameraActivity" />
    </application>
</manifest>