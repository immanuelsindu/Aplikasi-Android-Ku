<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.ukdw.ti.mysubmission2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySubmission2">
        <activity
            android:name="id.ac.ukdw.ti.mysubmission2.ui.setting.ThemeSettingActivity"
            android:exported="false" />
        <activity
            android:name="id.ac.ukdw.ti.mysubmission2.ui.favourite.FavouriteActivity"
            android:exported="false" />
        <activity
            android:name="id.ac.ukdw.ti.mysubmission2.ui.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:launchMode = "singleTop"
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splashcreen.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.MySubmission2.2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>